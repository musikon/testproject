.root
  display: block
  width 1366px
  margin 0px auto
  .ui.compact.search.selection.dropdown
    width 300px
    margin 0px 30px
  .ui.input
    width 500px
  .discription
    display inline-block
    margin-left 30px
    vertical-align top

    h2
      margin 0px
      width 400px
      line-height 30px

    span
      color #3c5876
      font-size 16px
      width 400px

    p
     font-size 20px
     width 400px
     margin 10px 0px 15px 0px

  .none
    display none
  .icon-app
    display inline-block
    vertical-align top
    border-radius 20px
    overflow hidden
  .contentAdvisoryRating
    display inline-block
    vertical-align top
    border 1px solid grey
    font-size 12px
    padding 0px 5px
    margin-left 30px
  .more-discription
    display block
    padding-top 30px
    p
      width 640px
      color grey
  .slide-wrapper
    width 640px
    overflow hidden
    margin-top 30px
    .slide
      display inline-block
      height:600px
      background-position: center
      background-repeat: no-repeat
      background-size: cover
      vertical-align: top
      text-align right
      .divider
        width 10px
        background white
        height 100%
        display inline-block
